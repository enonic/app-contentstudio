{
  "name": "lib-contentstudio",
  "version": "6.0.0",
  "description": "Enonix XP - Content Studio Library",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/enonic/app-contentstudio"
  },
  "scripts": {
    "build:prod": "pnpm --color /^build:prod:.*$/",
    "build:prod:client": "tsc --pretty",
    "build:prod:lib": "webpack --color --stats-error-details",
    "build:prod:css": "vite build --mode production --config vite.config.css.mjs",
    "build:dev": "pnpm --color /^build:dev:.*$/",
    "build:dev:client": "tsc --pretty --inlineSourceMap --inlineSources",
    "build:dev:lib": "webpack --color --stats-error-details",
    "build:dev:css": "vite build --mode development --config vite.config.css.mjs",
    "check": "pnpm --color /^check:.*$/",
    "check:types": "tsc --skipLibCheck --declaration --noEmit",
    "check:lint": "eslint **/*.ts --quiet --cache",
    "check:lint:fix": "eslint **/*.ts --quiet --cache --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@enonic/ui": "~0.25.1",
    "@nanostores/preact": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "d3": "^7.9.0",
    "d3-dag": "^0.11.5",
    "dompurify": "^3.3.0",
    "enonic-admin-artifacts": "^2.4.0",
    "flag-icons": "^7.5.0",
    "hasher": "^1.2.0",
    "jquery-simulate": "^1.0.2",
    "jquery-ui": "^1.14.1",
    "jsondiffpatch": "^0.7.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.545.0",
    "nanoid": "~5.1.5",
    "nanostores": "^0.11.4",
    "preact": "^10.27.2",
    "q": "^1.5.1",
    "sortablejs": "^1.15.6",
    "tw-animate-css": "^1.3.8"
  },
  "peerDependencies": {
    "@enonic/lib-admin-ui": "workspace:*",
    "@radix-ui/react-slot": "^1.2.0",
    "focus-trap-react": "^11.0.0"
  },
  "devDependencies": {
    "@enonic/eslint-config": "^2.1.0",
    "@enonic/lib-admin-ui": "workspace:*",
    "@radix-ui/react-slot": "^1.2.0",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.2",
    "@tailwindcss/vite": "^4.1.13",
    "@types/ckeditor": "^4.9.10",
    "@types/core-js": "^2.5.8",
    "@types/hasher": "0.0.35",
    "@types/jquery": "^3.5.33",
    "@types/jqueryui": "^1.12.24",
    "@types/q": "^1.5.8",
    "@types/sortablejs": "^1.15.9",
    "@vitest/ui": "^4.0.11",
    "circular-dependency-plugin": "^5.2.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.1",
    "focus-trap-react": "^11.0.0",
    "globals": "^15.15.0",
    "happy-dom": "^20.0.10",
    "less-loader": "^12.3.0",
    "mini-css-extract-plugin": "^2.9.4",
    "minimist": "^1.2.8",
    "postcss-loader": "^8.2.0",
    "swc-loader": "^0.2.6",
    "tailwindcss": "^4.1.13",
    "terser-webpack-plugin": "^5.3.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.1.3",
    "vitest": "^4.0.11",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">= 22.19.0",
    "pnpm": ">= 10.17.1",
    "npm": ">= 10.9.3"
  }
}
