{
  "name": "lib-contentstudio",
  "version": "6.0.0",
  "description": "Enonix XP - Content Studio Library",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/enonic/app-contentstudio"
  },
  "scripts": {
    "build:prod": "pnpm --color /^build:prod:.*$/",
    "build:prod:client": "tsc --pretty",
    "build:prod:lib": "webpack --color --stats-error-details",
    "build:dev": "pnpm --color /^build:dev:.*$/",
    "build:dev:client": "tsc --pretty --inlineSourceMap --inlineSources",
    "build:dev:lib": "webpack --color --stats-error-details",
    "check": "pnpm --color /^check:.*$/",
    "check:types": "tsc --skipLibCheck --emitDeclarationOnly --declaration",
    "check:lint": "eslint **/*.ts --quiet --cache"
  },
  "dependencies": {
    "@enonic/lib-admin-ui": "workspace:*",
    "@enonic/ui": "^0.5.0",
    "d3": "^7.9.0",
    "d3-dag": "^0.11.5",
    "dompurify": "^3.2.6",
    "enonic-admin-artifacts": "^2.3.2",
    "flag-icons": "^7.5.0",
    "hasher": "^1.2.0",
    "jquery-simulate": "^1.0.2",
    "jquery-ui": "^1.14.1",
    "jsondiffpatch": "^0.7.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.542.0",
    "nanoid": "~5.1.5",
    "nanostores": "^0.11.4",
    "q": "^1.5.1",
    "sortablejs": "^1.15.6"
  },
  "peerDependencies": {
    "preact": ">=10.25.0"
  },
  "devDependencies": {
    "@enonic/eslint-config": "^2.0.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@types/ckeditor": "^4.9.10",
    "@types/core-js": "^2.5.8",
    "@types/hasher": "0.0.35",
    "@types/jquery": "^3.5.32",
    "@types/jqueryui": "^1.12.24",
    "@types/q": "^1.5.8",
    "@types/sortablejs": "^1.15.8",
    "circular-dependency-plugin": "^5.2.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.29.0",
    "globals": "^15.15.0",
    "less-loader": "^12.3.0",
    "mini-css-extract-plugin": "^2.9.2",
    "minimist": "^1.2.8",
    "postcss-loader": "^8.1.1",
    "preact": "^10.27.1",
    "swc-loader": "^0.2.6",
    "terser-webpack-plugin": "^5.3.14",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
