{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "bundler",
        "target": "ES2023",
        "lib": [
            "ES2023",
            "DOM"
        ],
        "baseUrl": ".",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "outDir": "build/resources/main/dev/lib-contentstudio/",
        "declaration": true,
        "declarationDir": "build/resources/main/dev/lib-contentstudio/",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "useDefineForClassFields": false,
        "allowJs": false,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "incremental": true,
        "types": [
            "ckeditor",
            "hasher",
            "jquery",
            "jqueryui"
        ],
        "paths": {
            "react": ["node_modules/preact/compat"],
            "react-dom": ["node_modules/preact/compat"]
        }
    },
    "include": [
        "./src/main/resources/assets/js/types.d.ts",
        "./src/main/resources/assets/js/**/*",
        "./.xp/dev/lib-admin-ui/**/*.d.ts"
    ],
    "exclude": [
        "build/**/*",
        "out/**/*"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
