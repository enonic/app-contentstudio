{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "bundler",
        "target": "ES2023",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "baseUrl": ".",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "sourceMap": true,
        "downlevelIteration": true,
        "useDefineForClassFields": false,
        "types": [
            "ckeditor",
            "jquery",
            "jqueryui",
            "q"
        ],
        "paths": {
            "@enonic/lib-admin-ui": [".xp/dev/lib-admin-ui/"]
        }
    },
    "include": [
        "./src/**/*",
        ".xp/dev/lib-admin-ui/**/*.ts",
        ".xp/dev/lib-contentstudio/**/*.ts"
    ],
    "exclude": [
        "src/main/resources/lib/**",
        "src/main/resources/assets/shared-socket/**"
    ]
}
