<widget xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="widget.liveview.site.name">Site engine</display-name>
  <description i18n="widget.liveview.site.description">Render using site engine</description>
  <interfaces>
    <interface>contentstudio.liveview</interface>
  </interfaces>
  <config>
    <property name="auto" value="true"/>
    <property name="order" value="90"/>
    <property name="allowContentType" value="*"/>
    <property name="allowPath" value="${site}/*"/>
  </config>
</widget>
